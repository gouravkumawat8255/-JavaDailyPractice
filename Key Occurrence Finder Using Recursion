public record Find_the_occurence_usingKey() {
    public static void occurence(int arr[], int key, int i) {
        // Base case: if we've checked all elements
        if (i == arr.length) {
            return;
        }

        // If the current element is the key, print the index
        if (arr[i] == key) {
            System.out.print(i + " ");
        }

        // Continue checking the rest of the array
        occurence(arr, key, i + 1);
    }

    public static void main(String[] args) {
        int arr[] = {3, 2, 4, 5, 6, 2, 3, 4, 6, 2, 3, 2};

        // Calling the function to print all indices where 3 is present
        occurence(arr, 3, 0);
    }
}
