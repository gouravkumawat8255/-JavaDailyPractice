public class Remove_Dulicates_String {
    public static void  removeDupicate(String  str, int idx, StringBuilder newstr, boolean[] map) {
        if (idx == str.length()) {
            System.out.println(newstr);
            return;
        }
        char currchar = str.charAt(idx);
        if (map[currchar - 'a'] == true) {
            //dupicate 
            removeDupicate(str, idx + 1, newstr, map);
        }
        else {
            map[currchar - 'a'] = true;
            removeDupicate(str, idx + 1, newstr.append(currchar), map);
         }
    }
    public static void main(String[] args) {
        String str = "appanacollage";
        removeDupicate(str, 0, new StringBuilder(""), new boolean[26]);
    }
}
